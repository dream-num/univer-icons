{
  "compilerOptions": {
    "target": "es5",
    "jsx": "react",
    "lib": [
      "esnext",
      "dom"
    ],
    "experimentalDecorators": true,
    "baseUrl": "./",
    "module": "commonjs",
    "moduleResolution": "node",
    "typeRoots": [
      "./node_modules/@types"
    ],
    "strict": true,
    "noUnusedLocals": true,
    "declaration": true,
    "outDir": "dist",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": [
    "packages"
  ]
}
